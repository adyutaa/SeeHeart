<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddReminderActivity">

    <!-- Task Title Radio Group -->
    <TextView
        android:id="@+id/tvTaskTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/rgTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTaskTitleLabel"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbBangun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangun"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbMinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minum"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbBeraktivitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beraktivitas"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rbTidur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidur"
            android:padding="8dp"/>
    </RadioGroup>

    <!-- Reminder Date -->
    <TextView
        android:id="@+id/tvReminderDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder Date"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/rgTaskTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etReminderDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:focusable="false"
        android:backgroundTint="@color/primary"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReminderDateLabel" />

    <!-- Reminder Time -->
    <TextView
        android:id="@+id/tvReminderTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder Time"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/etReminderDate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etReminderTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select Time"
        android:focusable="false"
        android:backgroundTint="@color/primary"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReminderTimeLabel" />

    <!-- Repeat Option -->
    <TextView
        android:id="@+id/tvRepeatLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/etReminderTime"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRepeatLabel" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/secondary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/switchRepeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
