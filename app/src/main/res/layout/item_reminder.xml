<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:padding="8dp">

    <!-- Reminder Icon -->
    <ImageView
        android:id="@+id/imgReminderIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/reminderwake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Reminder Title -->
    <TextView
        android:id="@+id/tvReminderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bangun Pagi"
        android:textSize="18sp"
        android:textColor="@color/primary"
        app:layout_constraintStart_toEndOf="@id/imgReminderIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp" />

    <!-- Completion Button -->
    <ImageButton
        android:id="@+id/btnMarkComplete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_check"
        android:background="@null"
        android:contentDescription="Mark Complete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
